{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "strict": false,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",

    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "incremental": false,
    "paths": {
      "@/*": ["src/*"],
    }
  }
}
