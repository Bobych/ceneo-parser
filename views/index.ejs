<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ceneo parser</title>
    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .log-container {
            height: 200px;
            overflow-y: auto;
            border: 1px solid #ccc;
            padding: 10px;
            background-color: #f8f9fa;
        }

        .status-container {
            padding: 10px;
            border: 1px solid #ccc;
            background-color: #e9ecef;
        }
    </style>
</head>

<body class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h3>Logs</h3>
            <div>
                <h5>Parser</h5>
                <div id="parserlog" class="log-container">No data.</div>
            </div>
            <div class="mt-3">
                <h5>Google</h5>
                <div id="googlelog" class="log-container">No data.</div>
            </div>
            <div class="mt-3">
                <h5>Redis</h5>
                <div id="redislog" class="log-container">No data.</div>
            </div>
        </div>

        <div class="col-md-6">
            <h3>Status</h3>
            <div class="status-container mt-2"><strong>Google Row:</strong> <span id="googlerow">Waiting for
                    updates...</span></div>
            <div class="status-container mt-2"><strong>Category Page:</strong> <span id="categorypage">Waiting for
                    updates...</span></div>
            <div class="status-container mt-2"><strong>Product Page:</strong> <span id="product">Waiting for
                    updates...</span></div>
        </div>
    </div>

    <script>
        const socket = io();

        function addLog(containerId, log) {
            const container = document.getElementById(containerId);
            if (container.innerText === "No data.") container.innerText = "";
            const logElement = document.createElement("div");
            logElement.innerText = log;
            container.appendChild(logElement);

            while (container.children.length > 100) {
                container.removeChild(container.firstChild);
            }

            container.scrollTop = container.scrollHeight;
        }

        socket.on('status:googlerow', (status) => document.getElementById('googlerow').innerText = status);
        socket.on('status:categorypage', (status) => document.getElementById('categorypage').innerText = status);
        socket.on('status:product', (status) => document.getElementById('product').innerText = status);

        socket.on('logs:parser', (log) => addLog('parserlog', log));
        socket.on('logs:google', (log) => addLog('googlelog', log));
        socket.on('logs:redis', (log) => addLog('redislog', log));
    </script>
</body>

</html>